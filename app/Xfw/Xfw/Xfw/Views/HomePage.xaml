<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Filmes"
             x:Class="Xfw.Views.HomePage">
    <ContentPage.Content>
        <ListView 
            HasUnevenRows="True"
            SelectionMode="None"
            SeparatorColor="Transparent"
            ItemsSource="{Binding Movies}"
            IsRefreshing="{Binding IsBusy}"
            ItemTapped="ListView_ItemTapped"
            CachingStrategy="RecycleElement">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Margin="16" ColumnSpacing="0" 
                              RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0"
                                   HeightRequest="220"
                                   Aspect="AspectFill"
                                   Source="{Binding FullBackdropPath}" /> 
                            <BoxView 
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                HeightRequest="220"
                                Opacity="0.6" Color="#000000" />
                            <StackLayout 
                                Margin="16"
                                Spacing="4"
                                VerticalOptions="End"
                                Grid.Row="0"  Grid.RowSpan="2">
                                <Label 
                                TextColor="#E1E1E1" 
                                Text="{Binding OriginalTitle}"
                                FontAttributes="Bold"
                                FontSize="22"/>
                                <Label
                                TextColor="#A5A5A5"
                                Text="{Binding ReleaseDate, StringFormat='release date: {0}' }"
                                LineBreakMode="WordWrap"
                                FontSize="18"/>
                                <Label
                                TextColor="#A5A5A5"
                                Text="{Binding Popularity, StringFormat='popularity: {0} votes' }"
                                LineBreakMode="WordWrap"
                                FontSize="18"/>
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate> 
        </ListView>
    </ContentPage.Content>
</ContentPage>